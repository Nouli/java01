<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="java01.entity.Utilisateur" table="utilisateur">

		<meta attribute="class-description">
			This class contains the user detail.
		</meta>

		<id name="id" type="long" column="id">
			<generator class="native" />
		</id>

		<property name="firstName" column="firstName" type="string" />
		<property name="lastName" column="lastName" type="string" />
		<property name="gender" column="gender">
    		<type name="org.hibernate.type.EnumType">
        		<param name="enumClass">java01.entity.Gender</param>
        		<param name="type">12</param>
    		</type>
		</property>
 		
		<property name="age" column="age" type="int" />
		<many-to-one name="groupe" class="java01.entity.GroupeUtilisateur"
            column="groupe_Id" not-null="false"/>
	</class>

	<class name="java01.entity.GroupeUtilisateur" table="groupeutilisateur">

		<meta attribute="class-description">
			This class contains GroupeUsers.
		</meta>

		<id name="id" type="int" column="long">
			<generator class="native" />
		</id>

		<property name="name" column="name">
			<type name="org.hibernate.type.EnumType">
        		<param name="enumClass">java01.entity.Role</param>
        		<param name="type">12</param>
    		</type>
    	</property>
		  <set name="utilisateurs" table="Utilisateur" 
				inverse="true" lazy="true" fetch="select">
            <key>
                <column name="groupe_Id" not-null="false" />
            </key>
            <one-to-many class="java01.entity.Utilisateur" />
        </set>
		
	</class>

</hibernate-mapping>